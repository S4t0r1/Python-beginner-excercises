def gameboard_size():
    while True:
        try:
            size = int(input("What gameboard size do you want? (number=side length): "))
            break
        except ValueError:
            print("\nOops!  That was not a NUMBER.  Try again...\n")
    return size

def build_gameboard(size):
    board = []
    for i in range(size):
        row = [(' ') for e in range(size)]
        board.append(row)
    return board

def txt_display(move):
    if move % 2 == 0:
        txt = 'PLAYER_1,'
    else:
        txt = 'PLAYER_2,'
    return txt 

def ask_player(txt):
    player = input(txt + " please choose your coordinates[num,num](1=min,3=max).").split(',')
    return player

def player_symbol(move,board,n,m):
    if move % 2 == 0:
        board[n][m] = 'o'
    else:
        board[n][m] = 'x'
    return board[n][m]

def used_spot(board,n,m):
    if board[n][m] == 'x' or board[n][m] == 'o':
        return True

def check_win(move,board,n,m,size):
    s = size
    if move >= 5:
        row_w = len([board[n][m] for e in board[n] if e == board[n][m]])
        col_w = len([board[i][m] for i in range(s) if board[i][m] == board[n][m]])
        diag1_w = len([board[i][i] for i in range(s) if board[i][i] == board[n][m]])
        diag2_w = len([board[i][(s - 1) - i] for i in range(s) if board[i][(s - 1) - i] == board[n][m]])
        if row_w == s or col_w == s or diag1_w == s or diag2_w == s:
            if board[n][m] == 'x':
                print ('\n'+"*** PLAYER_1 WINS! ***")
            else:
                print ('\n'+"*** PLAYER_2 WINS! ***")
            return True

def play_again(move,size,win,txt):
    if win == True or move == size**2:
        if move == size**2:
            txt = "Its a tie! "
        if win == True:
            txt = ("%s congratulations! " % txt)
        repeat = input(txt + "Do you want to play again? If yes type Y/y/yes, if not, type anything else: ")
        if repeat.lower() == "y" or repeat.lower() == "yes":
            return True

def printings(board,p1_score,p2_score):
    print('\n',*board, sep='\n')
    print('\n'+'(p1)',p1_score,':',p2_score,'(p2)','\n')

# Here we go! *****************************************************

def main():
    move = 0
    p1_score = 0
    p2_score = 0
    txt = "Hello PLAYER_1,"
    size = gameboard_size()
    board = build_gameboard(size)
    
    while True:
        win = None
        while True:
            try:
                printings(board,p1_score,p2_score)
                player = ask_player(txt)
                n = int(player[0]) - 1
                m = int(player[1]) - 1
                break
            except ValueError:
                print("\nOops!  That was not a valid input.  Try again...")
            except IndexError:
                print("\nOops!  The number is out of the index range.  Try again...")
        
        if used_spot(board,n,m) is not True:
            move += 1
            board[n][m] = player_symbol(move,board,n,m)
        else:
            print("\nSpot taken. ")
            
        if check_win(move,board,n,m,size) is True:
            win = True
            if board[n][m] == 'x':
                p1_score += 1
            else:
                p2_score += 1
        
        if win == True or move == size**2:
            printings(board,p1_score,p2_score)
            if play_again(move,size,win,txt) == True:
                board = build_gameboard(size)
                move = 0
                txt = txt_display(move)
                continue
            else:
                print("\nGame over!")  
                break
        
        txt = txt_display(move)

main()
