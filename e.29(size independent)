import sys

def gameboard_size():
    size = int(input("What gameboard size do you want? (number=side lenght)"))
    return size

def build_gameboard(size):
    board = []
    for i in range(size):
        row = [(' ') for e in range(size)]
        board.append(row)
    return board

def txt_display(move):
    if move % 2 == 0:
        txt = 'PLAYER_1: '
    else:
        txt = 'PLAYER_2: '
    return txt

def ask_player(txt):
    player = input(txt + "Please choose your coordinates[num,num](1=min,3=max).")
    player = player.split(',')
    return player

def player_symbol(move,board,n,m):
    if move % 2 == 0:
        board[n][m] = 'o'
    else:
        board[n][m] = 'x'
    return board[n][m]

def used_spot(board,n,m):
    if board[n][m] == 'x' or board[n][m] == 'o':
        return True

def check_win(move,board,n,m,size):
    s = size
    if move >= 5:
        row_w = len([board[n][m] for e in board[n] if e == board[n][m]])
        col_w = len([board[i][m] for i in range(s) if board[i][m] == board[n][m]])
        diag1_w = len([board[i][i] for i in range(s) if board[i][i] == board[n][m]])
        diag2_w = len([board[i][(s - 1) - i] for i in range(s) if board[i][(s - 1) - i] == board[n][m]])
        if row_w == s or col_w == s or diag1_w == s or diag2_w == s:
            if board[n][m] == 'x':
                print ('\n'+"*** PLAYER_1 WINS! ***",'\n')
            else:
                print ('\n'+"*** PLAYER_2 WINS! ***",'\n')
            return True

def player_score(board,n,m):
    winner = 0
    if board[n][m] == 'x':
        winner = 1
    else:
        winner = 2
    return winner

def play_again():
    repeat = input("Do you want to play again? If yes type Y/y/yes, if not, type anything else: ")
    if repeat.lower() == "y" or repeat.lower() == "yes":
        return True

# Here we go!

def main():
    move = 0
    p1_score = 0
    p2_score = 0
    txt = "Hello PLAYER_1! "
    size = gameboard_size()
    board = build_gameboard(size)
    
    while True:
        try:
            print('\n',*board, sep='\n')
            print('\n'+'(p1)',p1_score,':',p2_score,'(p2)','\n')
            player = ask_player(txt)
            n = int(player[0]) - 1
            m = int(player[1]) - 1
        
            if used_spot(board,n,m) is not True:
                move += 1
                board[n][m] = player_symbol(move,board,n,m)
            else:
                print("Spot taken. ")
        except ValueError:
            print("Oops!  That was not a valid input.  Try again...")
        except IndexError:
            print("Oops!  The number is out of the index range.  Try again...")
            
        if (check_win(move,board,n,m,size) is True) or move == 9:
            print(*board, sep='\n')
            if player_score(board,n,m) == 1:
                p1_score += 1
            else:
                p2_score += 1
            print('\n'+'(p1)',p1_score,':',p2_score,'(p2)','\n')
                
            repeat = play_again()
            if repeat == True:
                board = build_gameboard(size)
                move = 0
                txt = txt_display(move)
                continue
            else:
                print("Game over!")  
                sys.exit()
        
        txt = txt_display(move)

main()
